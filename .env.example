# ENS Legis AI Clone OS - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_DEBUG=false
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=./credentials.json
EMAIL_ADDRESS=your-email@gmail.com
IMAP_SERVER=imap.gmail.com
SMTP_SERVER=smtp.gmail.com

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_token_here

# Social Media API Keys (Optional - for future features)
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_API_KEY=your_linkedin_api_key
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_WEBHOOK=your_discord_webhook_url
MASTODON_INSTANCE=https://mastodon.social

# Data Paths
SURVEILLANCE_LOG_PATH=./data/surveillance_log.json

# Bot Configuration
AUTO_RESPONSE_ENABLED=true
EMAIL_CHECK_INTERVAL=300
MAX_EMAILS_PER_CHECK=50
